@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow col-11 col-lg-4">
        <div class="card-body px-5 pt-5">

            <form method="post" asp-action="Index" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="small text-danger"></span>
                </div>
                <div class="mb-4">
                    <input asp-for="RememberMe" class="form-check-input me-2" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div class="d-grid mb-3">
                    <button class="btn btn-secondary py-2">SUBMIT</button>
                </div>
            </form>

            <div class="text-center mb-4">
                <div class="mt-4 mb-3" >Or login with</div>
                <div class="d-flex justify-content-center">
                    <a asp-action="Facebook" class="link-circle link-facebook"><i class="fa-brands fa-facebook-f"></i></a>
                    <a asp-action="Google" class="link-circle link-google"><i class="fa-brands fa-google"></i></a>
                    <a asp-action="MicrosoftAccount" class="link-circle link-microsoft"><i class="fa-brands fa-microsoft"></i></a>
                </div> 
            </div>

        </div>
    </div>
</div>